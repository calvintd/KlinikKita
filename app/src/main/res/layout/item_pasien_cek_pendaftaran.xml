<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCekPendaftaranPasien"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#DDDDDD"
    app:cardCornerRadius="24dp"
    app:cardElevation="24dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/txtPasienCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/clinic_appointments_list_pending_patient_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/glCekPendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNamaPasienCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/clinic_appointments_list_pending_patient_name_example"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/glCekPendaftaran"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierPasienCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txtPasienCekPendaftaran, txtNamaPasienCekPendaftaran" />

        <TextView
            android:id="@+id/txtKlinikCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/patient_appointments_registration_details_clinic_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/glCekPendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierPasienCekPendaftaran" />

        <TextView
            android:id="@+id/txtNamaKlinikCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/patient_appointments_registration_clinic_name_example"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/glCekPendaftaran"
            app:layout_constraintTop_toBottomOf="@id/barrierPasienCekPendaftaran" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierKlinikCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txtKlinikCekPendaftaran, txtNamaKlinikCekPendaftaran" />

        <TextView
            android:id="@+id/txtDokterCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/patient_appointments_registration_details_doctor_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/glCekPendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrierKlinikCekPendaftaran" />

        <TextView
            android:id="@+id/txtNamaDokterCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/patient_appointments_registration_doctor_name_example"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/glCekPendaftaran"
            app:layout_constraintTop_toBottomOf="@+id/barrierKlinikCekPendaftaran" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierDokterCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txtDokterCekPendaftaran, txtNamaDokterCekPendaftaran" />

        <TextView
            android:id="@+id/txtKeluhanCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/patient_appointments_registration_details_complaints"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/glCekPendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrierDokterCekPendaftaran" />

        <TextView
            android:id="@+id/txtIsiKeluhanCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/patient_appointments_list_history_complaints_example"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtKeluhanCekPendaftaran"
            app:layout_constraintTop_toBottomOf="@+id/barrierDokterCekPendaftaran" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierKeluhanCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txtKeluhanCekPendaftaran, txtIsiKeluhanCekPendaftaran" />

        <TextView
            android:id="@+id/txtStatusCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/patient_appointments_list_current_status"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/glCekPendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrierKeluhanCekPendaftaran" />

        <TextView
            android:id="@+id/txtIsiStatusCekPendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/patient_appointments_list_current_status_pending"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtKeluhanCekPendaftaran"
            app:layout_constraintTop_toBottomOf="@+id/barrierKeluhanCekPendaftaran" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStatusCekPendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txtStatusCekPendaftaran, txtIsiStatusCekPendaftaran" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>